                <form id='registrationForm' action="/registration/admin" method="POST">

                        <p><input class='text-fields' type="text" id="name" placeholder="Name" name="name"
                                        value={{name}}>
                        </p>
                        <p><input class='text-fields' type="hidden" id="idNumber" placeholder="idNumber" name="idNumber"
                                        value="{{idNumber}}">
                        </p>
